<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/att_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Pikachu" />

            <TextView
                android:id="@+id/att_npn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/att_name"
                android:layout_toLeftOf="@+id/att_name"
                android:paddingRight="4dp"
                android:textStyle="bold"
                tools:text="#000" />

            <TextView
                android:id="@+id/att_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/att_name"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                tools:text="00 HP" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type(s): " />

            <TextView
                android:id="@+id/type1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Pikachu" />

            <TextView
                android:id="@+id/type2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text=", Pikachu" />

        </LinearLayout>

        <TextView
            android:id="@+id/att_subtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Name: Pikachu" />

        <TextView
            android:id="@+id/att_supertype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Name: Pikachu" />

        <TextView
            android:id="@+id/att_rarity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Name: Pikachu" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weakType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Pikachu" />

            <TextView
                android:id="@+id/weakValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text=" xPikachu" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resistType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Pikachu" />

            <TextView
                android:id="@+id/resistValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/resistType"
                tools:text=" xPikachu" />

            <TextView
                android:id="@+id/card_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                tools:text="cardNumber" />

        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/attack1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/atk_text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/atk_name1"
                        tools:text="Attack text" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/atk_text1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/atk_ad1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textStyle="bold"
                            tools:text="Attack ad" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/atk_name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        tools:text="Attack name"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/attack2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/atk_name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line2"
                        android:gravity="center"
                        android:textStyle="bold"
                        tools:text="Attack name" />


                    <TextView
                        android:id="@+id/atk_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/atk_name2"
                        tools:text="Attack text" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/atk_text2"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/atk_ad2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textStyle="bold"
                            tools:text="Attack ad" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/ability_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line3"
                        android:gravity="center"
                        android:textStyle="bold"
                        tools:text="Ability name" />


                    <TextView
                        android:id="@+id/ability_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ability_name"
                        tools:text="Ability text" />


                </RelativeLayout>

            </LinearLayout>

        </ScrollView>



    </LinearLayout>


</LinearLayout>